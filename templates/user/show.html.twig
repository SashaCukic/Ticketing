{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-11">
            <h1>User</h1>
        </div>
        <div class="col-sd-1">
            <div class="btn-group" role="group">
                <a href="{{ path('user_index') }}" class="btn btn-primary">Retour</a>
                <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-success">edit</a>
            </div>
        </div>
    </div>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Media</th>
                <td>
                    {% if user.media is defined  and user.media is not null %}
                        <img src="{{ asset('uploads/' ~ user.media.name) }}" class="img-fluid rounded" height="100px" width="100px"/>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ user.createdAt|date('m/d/Y') }}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{{ user.updatedAt|date('m/d/Y') }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
